<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FAF5EF"
    tools:context="com.example.a91962.accidentalert.Setuserdetails"

    >

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:background="@color/viewfinder_laser"

        android:fontFamily="serif"
        android:text="Emergency Alert"
        android:textStyle="italic|bold"
        tools:ignore="HardcodedText"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Blood Group"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        tools:ignore="HardcodedText"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />


    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Address"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        tools:ignore="HardcodedText"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editText5"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="text"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:hint="phone no"
        android:layout_below="@+id/editText1"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignStart="@+id/editText1" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Name"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        tools:ignore="HardcodedText"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/button5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:background="@color/colorPrimaryDark"

        android:fontFamily="serif"
        android:text="Live Location"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/editText4"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textColor="@android:color/black"

        android:fontFamily="serif"
        android:background="@android:color/holo_purple"
        android:textStyle="italic|bold"
        tools:ignore="HardcodedText"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="             Enter Number  Plate Details" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"

        android:background="@drawable/btn_login_reg_design"

        android:text="Search process"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="135dp"
        android:layout_marginStart="135dp"
        android:layout_below="@+id/editText6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
